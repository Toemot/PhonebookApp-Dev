@model PhoneApp.Models.Entry

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Entry</h2>

@using(Html.BeginForm("Save", "Entry")) 
{
    @Html.ValidationSummary(true, "Please fix the below errors")
    <div class="form-group">
        @Html.LabelFor(e => e.Name)
        @Html.TextBoxFor(e => e.Name, new { @class = "form-control"})
        @Html.ValidationMessageFor(e => e.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.PhoneNumber)
        @Html.TextBoxFor(e => e.PhoneNumber, new { @class = "form-control"})
        @Html.ValidationMessageFor(e => e.PhoneNumber)
    </div>
    @Html.HiddenFor(c => c.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts 
    {
    @Scripts.Render("~/bundles/jqueryval")
}
