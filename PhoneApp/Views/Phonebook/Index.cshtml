@model IEnumerable<PhoneApp.Models.Phonebook>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Phonebook List</h2>

@Html.ActionLink("New Entry", "PhonebookForm", "Phonebook", null, new { @class = "btn btn-primary" })
<br />
<br />

<table id="phonebooks" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Phonebook</th>
            <th>Delete Entry</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var phonebook in Model)
        {
            <tr>
                <td>@Html.ActionLink(phonebook.Name, "details", "entry", new { id = phonebook.Id }, null)</td>
                <td>
                    <button data-phonebook-id="@phonebook.Id" class="btn-link js-delete">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
    {
    <script>
        $(document).ready(function () {
            $("#phonebooks").DataTable();

            $("#phonebooks").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this contact?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "api/phonebook/" + button.attr("data-phonebook-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
            });
        });
    </script>
}